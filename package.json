{
  "name": "anime-client",
  "version": "0.0.3",
  "main": "index.html",
  "chromium-args": "--mixed-context",
  "window": {
    "toolbar": true,
    "width": 1024,
    "height": 768
  },
  "node-remote": "*://*/*",
  "author": "pcpl2",
  "webkit": {
    "plugin": false,
    "java": false,
    "page-cache": false
  },
  "manifestUrl": "https://pcpl2.github.io/Anime-client/package.json",
  "dependencies": {
    "bootstrap": "^4.0.0",
    "bootstrap-material-design": "^4.0.0-beta.4",
    "cookie": "^0.3.1",
    "jquery": "^3.3.1",
    "mithril": "^1.1.6",
    "nw-autoupdater": "^1.1.4",
    "phantom": "^4.0.12",
    "request": "^2.83.0",
    "select2": "4.0.3",
    "video.js": "^6.6.0",
    "videojs-resolution-switcher": "^0.4.2"
  },
  "devDependencies": {
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "nwjs-builder-phoenix": "^1.14.6"
  },
  "build": {
    "nwVersion": "0.27.5",
    "ffmpegIntegration": true,
    "targets": [
      "zip"
    ],
    "outputPattern": "${NAME}-${VERSION}-${PLATFORM}-${ARCH}",
    "excludes": [
      ".vscode/*",
      "docs/*",
      ".eslintrc.json",
      ".gitignore",
      ".travis.yml",
      ".yarnclean",
      "anime-client.code-workspace",
      "jsconfig.json",
      "package-lock.json",
      "yarn.lock"
    ]
  },
  "scripts": {
    "dist": "build --tasks win-x86,win-x64,linux-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --x86 --mirror https://dl.nwjs.io/ ."
  }
}
